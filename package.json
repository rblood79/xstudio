{
  "name": "xstudio",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "turbo run dev --filter=@xstudio/builder",
    "build": "turbo run build",
    "build:all": "turbo run build:all",
    "type-check": "turbo run type-check",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean && rm -rf node_modules",
    "storybook": "pnpm -F @xstudio/builder storybook",
    "build-storybook": "pnpm -F @xstudio/builder build-storybook",
    "playwright:install": "npx playwright install",
    "test:e2e": "playwright test",
    "check:pixi-plan": "pnpm -F @xstudio/builder check:pixi-plan",
    "fix:pixi-plan": "pnpm -F @xstudio/builder fix:pixi-plan"
  },
  "devDependencies": {
    "@playwright/mcp": "^0.0.53",
    "@playwright/test": "^1.57.0",
    "playwright": "^1.57.0",
    "tsx": "^4.21.0",
    "turbo": "^2.7.3",
    "vitest": "^4.0.16"
  },
  "packageManager": "pnpm@10.26.2"
}
